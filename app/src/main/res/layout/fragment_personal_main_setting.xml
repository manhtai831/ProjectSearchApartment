<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/settings_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:text="Cài Đặt"
            android:textColor="#000000"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_personal_main_setting_resetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/boder_2"
        android:text="Đặt Lại mật Khẩu"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_personal_main_setting_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/boder_2"
        android:text="Đánh Giá Của Bạn"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_personal_main_setting_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/boder_2"
        android:text="Hỗ Trợ - Góp Ý"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_personal_main_setting_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/boder_2"
        android:text="Phê Duyệt Bài Viết"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_personal_main_setting_infoApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/boder_2"
        android:text="Thông Tin Ứng Dụng"
        android:textColor="#000000"
        android:textStyle="bold" />

</LinearLayout>