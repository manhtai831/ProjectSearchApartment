<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Cập Nhật PassWord"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_personal_main_updatepassword_NhapUserName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/et_bg"
                android:hint="Mật Khẩu Cũ"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textSize="25dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_personal_main_updatepassword_NhapPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/et_bg"
                android:hint="Mật Khẩu Mới"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textSize="25dp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_personal_main_updatepassword_NhapLaiPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/et_bg"
                android:hint="Nhập Lại mật khẩu Mới"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textSize="25dp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_personal_main_updatepassword_DangKy"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/et_bg"
            android:backgroundTint="@color/vang"
            android:text="Cập Nhật"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_personal_main_updatepassword_Huy"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:background="@drawable/et_bg"
            android:backgroundTint="@color/vang"
            android:text="Hủy"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>
