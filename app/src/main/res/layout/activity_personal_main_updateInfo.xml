<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grad_bg"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp">

        <ImageView
            android:id="@+id/img_personal_main_info_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/user_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_personal_main_info_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:text="name"
                android:textColor="#000000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_personal_main_info_info"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/exclamation_mark" />

                <ImageView
                    android:id="@+id/img_personal_main_info_delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/delete"
                    android:backgroundTint="#ffffff"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/tv_personal_main_info_name_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Name"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rdo_personal_main_info_nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:textColor="#000000"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rdo_personal_main_info_nu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Nữ"
            android:textColor="#000000"
            android:textStyle="bold" />
    </RadioGroup>

    <EditText
        android:id="@+id/edt_personal_main_info_dateOfBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
       android:hint="ngay tháng năm sinh"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_personal_main_info_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:hint="số điện thoại"
        android:textColor="#000000"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tv_personal_main_info_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:hint="email"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_personal_main_info_update"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:background="@drawable/tv_boder"
        android:text="Cập Nhật Thông Tin"
        android:textColor="#000000"
        android:textStyle="bold" />

</LinearLayout>